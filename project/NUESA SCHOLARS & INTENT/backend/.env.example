# NUESA Backend Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# SECURITY
# ============================================
# Generate a strong secret key using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# ============================================
# DATABASE (PostgreSQL Server)
# ============================================
# Format: postgresql://username:password@host:port/database
# Example: postgresql://postgres:password123@localhost:5432/nuesa_db
DATABASE_URL=postgresql://postgres:password@localhost:5432/nuesa_db

# PostgreSQL Connection Details (used for initial setup if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nuesa_db
DB_USER=postgres
DB_PASSWORD=password

# ============================================
# CORS (Frontend Access)
# ============================================
# Allowed frontend origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================
# GOOGLE GEMINI API (Optional)
# ============================================
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================
# API CONFIGURATION
# ============================================
API_TITLE=NUESA Scholars & Intent API
API_VERSION=1.0.0
API_DESCRIPTION=Secured backend for NUESA scholarship and internship platform

# ============================================
# TOKEN EXPIRATION
# ============================================
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# ============================================
# PAGINATION
# ============================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
