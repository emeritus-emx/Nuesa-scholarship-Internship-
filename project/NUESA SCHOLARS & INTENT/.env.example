# Backend Configuration
# Copy this to .env and fill in with your actual values

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-with-a-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite:///./nuesa.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/nuesa_db

# CORS Origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000,https://yourdomain.com

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Google Gemini API (Optional)
GEMINI_API_KEY=your-gemini-api-key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# Logging
LOG_LEVEL=INFO
